{
    "name": "Green Basket",
    "version": "1.3",
    "description": "DoÄ‘i, vidi, pojedi!",
    "manifest_version": 2,
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "images/get_started16.png",
            "32": "images/get_started32.png",
            "48": "images/get_started48.png",
            "128": "images/get_started128.png"
        }
    },
    "icons": {
        "16": "images/get_started16.png",
        "32": "images/get_started32.png",
        "48": "images/get_started48.png",
        "128": "images/get_started128.png"
    },
    "permissions": [
        "activeTab",
        "declarativeContent",
        "storage"
    ],
    "content_scripts": [{
        "js": ["content.js"],
        "matches": ["https://www.k-ruoka.fi/*"],
        "run_at": "document_end",
        "css": ["custom.css"]
    }]
}
